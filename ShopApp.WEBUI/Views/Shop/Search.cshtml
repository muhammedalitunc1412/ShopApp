@model ShopApp.WEBUI.Models.ProductListViewModel
@{
    ViewData["Title"] = "List";
}

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("Categories")
        @await Html.PartialAsync("_search")

    </div>
    <div class="col-md-9">
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-md-4">
                    @await Html.PartialAsync("_showproduct", product)
                </div>
            }
            @if (Model.Products.Count == 0)
            {
                <div class="col-md-12">
                    <div class="alert alert-danger">
                        Ürün Yok :(
                    </div>
                </div>
            }
        </div>   
        
 

    </div>


</div>

